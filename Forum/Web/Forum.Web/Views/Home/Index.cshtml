@using Forum.Common
@model Forum.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}!";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>

    <div class="row">
        @foreach (var category in Model.Categories)
        {         
                <div class="col-md-4 media">
                    <img src="@category.ImageUrl" width="120" height="90" class="mr-3" alt="@category.Title">

                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@category.Url">@category.Title (@category.PostCount)</a>
                        </h5>
                        <p class="card-text">@category.Description</p>
                    </div>
                </div>          
        }
    </div>
</div>
